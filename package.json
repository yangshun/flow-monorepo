{
  "description": "Node.js + Flow boilerplate",
  "name": "flow-monorepo",
  "version": "0.0.1",
  "author": {
    "name": "Yangshun Tay",
    "email": "tay.yang.shun@gmail.com"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "build": "yarn clean && node ./scripts/build.js",
    "check-all": "yarn flow && yarn lint && yarn test && yarn build",
    "clean": "rimraf packages/**/{cjs,es,umd}/",
    "flow": "flow",
    "prettier": "prettier --write \"**/*.js\"",
    "prettier:report": "prettier --check \"**/*.js\"",
    "publish-packages": "lerna publish",
    "lint": "lerna exec -- yarn lint",
    "lint:report": "eslint packages",
    "test": "jest"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.15.5",
    "@babel/core": "^7.15.5",
    "@babel/node": "^7.15.4",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-flow": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-replace": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "cross-env": "^7.0.3",
    "flow-bin": "^0.166.1",
    "flow-typed": "^3.3.1",
    "jest": "^27.2.0",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.60.2",
    "rollup-plugin-terser": "^7.0.2"
  }
}
